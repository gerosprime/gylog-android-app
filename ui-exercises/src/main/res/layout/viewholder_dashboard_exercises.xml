<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/viewholder_dashboard_photo"
            android:layout_width="120dp"
            android:layout_height="180dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewholder_dashboard_muscles"
            android:layout_toEndOf="@+id/viewholder_dashboard_photo"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="42dp" />

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/viewholder_dashboard_photo"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/viewholder_dashboard_muscles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                tools:text="Inclined Bench-Press (Dumbbell)"
                android:id="@+id/viewholder_dashboard_name"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
