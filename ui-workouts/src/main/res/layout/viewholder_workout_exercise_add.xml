<?xml version="1.0" encoding="utf-8"?>

<com.gerosprime.gylog.base.components.android.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/viewholder_exercise_add_photo"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewholder_workout_exercises_muscles"
        android:layout_toEndOf="@+id/viewholder_exercise_add_photo"
        android:layout_toRightOf="@+id/viewholder_exercise_add_photo"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="42dp"
         />

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/viewholder_exercise_add_photo"
        android:layout_toStartOf="@+id/viewholder_exercise_add_checkbox"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/viewholder_exercise_add_photo"
        android:layout_toLeftOf="@+id/viewholder_exercise_add_checkbox">

        <TextView
            tools:text="Inclined Bench-Press (Dumbbell)"
            android:id="@+id/viewholder_exercise_add_name"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <CheckBox
        android:layout_margin="4dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/viewholder_exercise_add_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</com.gerosprime.gylog.base.components.android.CheckableRelativeLayout>